# 4-Plex Unified Investment Platform Environment Configuration

# =================
# Database Configuration
# =================
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here
NEO4J_PASSWORD=your_secure_neo4j_password_here

# =================
# AI Service API Keys
# =================
# OpenAI API (for GPT models)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API (for Claude models) 
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# =================
# Real Estate Data APIs
# =================
# PropertyRadar API (250+ search criteria)
PROPERTYRADAR_API_KEY=your_propertyradar_api_key_here

# RealEstate API (property details with foreclosure data)
REALESTATE_API_KEY=your_realestate_api_key_here

# ATTOM Data API (comprehensive foreclosure activity)
ATTOM_API_KEY=your_attom_data_api_key_here

# =================
# Application Configuration
# =================
# Application Environment
NODE_ENV=production
PYTHONPATH=/app

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# API Rate Limits
API_RATE_LIMIT=1000
API_BURST_LIMIT=2000

# =================
# Investment Analysis Configuration
# =================
# Property Filtering Criteria
MAX_PURCHASE_PRICE=500000
MIN_CAP_RATE=8.0
MIN_MONTHLY_CASH_FLOW=500
TARGET_PROPERTY_TYPE=4plex

# Geographic Focus (comma-separated)
TARGET_COUNTIES=Fulton,DeKalb,Clayton,Cobb,Atlanta

# Alert Thresholds  
HIGH_PRIORITY_SCORE=85
MEDIUM_PRIORITY_SCORE=70
LOW_PRIORITY_SCORE=60

# =================
# Discovery Engine Configuration
# =================
# Agent Configuration
MAX_CONCURRENT_AGENTS=8
AGENT_TIMEOUT=3600
SCRAPING_DELAY=2

# County-specific settings
FULTON_COUNTY_ENABLED=true
DEKALB_COUNTY_ENABLED=true
CLAYTON_COUNTY_ENABLED=true
COBB_COUNTY_ENABLED=true
ATLANTA_CITY_ENABLED=true

# =================
# Valuation Engine Configuration
# =================
# Analysis Options
INCLUDE_MARKET_ANALYSIS=true
INCLUDE_RISK_ASSESSMENT=true
INCLUDE_RENOVATION_ESTIMATES=true
INCLUDE_NEIGHBORHOOD_ANALYSIS=true

# Document Processing
MAX_DOCUMENT_SIZE=50MB
SUPPORTED_FORMATS=pdf,xlsx,csv,docx

# =================
# Monitoring Configuration
# =================
# Grafana Admin Password
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Prometheus Retention
PROMETHEUS_RETENTION=30d

# Health Check Intervals (seconds)
HEALTH_CHECK_INTERVAL=30
DEEP_HEALTH_CHECK_INTERVAL=300

# =================
# Security Configuration
# =================
# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:11071,https://yourdomain.com

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =================
# External Service URLs
# =================
# Platform Integration
PLATFORM_BASE_URL=https://ubuntuaicodeserver-1.tail5137b4.ts.net:10443
PLATFORM_ENDPOINT=/4plex-unified

# AI Stack Integration (if using platform AI services)
VLLM_GATEWAY_URL=http://localhost:9000
VLLM_REASONING_URL=http://localhost:8000
VLLM_GENERAL_URL=http://localhost:8001
VLLM_CODING_URL=http://localhost:8002

# =================
# Development Configuration
# =================
# Development Mode
DEBUG=false
DEVELOPMENT_MODE=false

# Hot Reload (development only)
HOT_RELOAD=false

# Test Database (development only)
TEST_DATABASE_URL=postgresql://postgres:test@localhost:5433/test_unified_properties

# =================
# Data Storage Configuration
# =================
# File Storage Paths
DATA_STORAGE_PATH=/app/data
LOG_STORAGE_PATH=/app/logs
UPLOAD_STORAGE_PATH=/app/uploads
EXPORT_STORAGE_PATH=/app/exports

# Maximum Storage Sizes
MAX_DATA_STORAGE_GB=100
MAX_LOG_STORAGE_GB=10
MAX_UPLOAD_SIZE_MB=50

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# =================
# Performance Configuration
# =================
# Worker Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=300
QUEUE_MAX_SIZE=1000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =================
# Notification Configuration
# =================
# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
FROM_EMAIL=4plex-platform@yourdomain.com

# Alert Recipients (comma-separated)
ALERT_EMAIL_RECIPIENTS=investor1@email.com,investor2@email.com

# Webhook Configuration (for integrations)
WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id
WEBHOOK_SECRET=your_webhook_secret_here

# =================
# Feature Flags
# =================
# Enable/disable major features
ENABLE_DISCOVERY_ENGINE=true
ENABLE_VALUATION_ENGINE=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_DOCUMENT_PROCESSING=true
ENABLE_EXPORT_SYSTEM=true
ENABLE_MONITORING=true
ENABLE_ALERTS=true

# Experimental Features
ENABLE_ML_PREDICTIONS=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_API_V2=false

# =================
# Compliance Configuration
# =================
# Data Retention Policies
DATA_RETENTION_DAYS=365
LOG_RETENTION_DAYS=90
SESSION_RETENTION_HOURS=24

# Privacy Settings
ANONYMIZE_PERSONAL_DATA=true
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true

# Audit Logging
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_LEVEL=INFO